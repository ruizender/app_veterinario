<p id="notice"><%= notice %></p>

<h1>Pet Histories</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Heigth</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.heigth %></td>
        <td><%= pet_history.description %></td>
        <td><%= link_to 'Show', pet_history, class:"btn btn-secondary text-light" %></td>
        <td><%= link_to 'Edit', edit_pet_history_path(pet_history), class:"btn btn-secondary text-light" %></td>
        <td><%= link_to 'Destroy', pet_history, class:"btn btn-secondary text-light", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-right">
<%= link_to 'New Pet History', new_pet_history_path, class:"btn btn-secondary text-light"%>
</div>