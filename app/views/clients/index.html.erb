<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Pets</th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <% client.pets.each do |pet| %>
          <td><%= pet.name %></td>
        <% end %>
        <td><%= link_to 'Show', client, class:"btn btn-secondary text-light" %></td>
        <td><%= link_to 'Edit', edit_client_path(client), class:"btn btn-secondary text-light" %></td>
        <td><%= link_to 'Destroy', client, class:"btn btn-secondary text-light", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>  

<br>
<div class="text-right">
<%= link_to 'New Client', new_client_path, class:"btn btn-secondary text-light" %>
</div>