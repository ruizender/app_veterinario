<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Birthdate</th>
      <th>Visitas</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthdate %></td>
        <td><%= pet.history_count%></td>


        <% pet.pet_histories.each do |i| %>
          <td> <%= i.description %></td>
        <% end %>  

        <td><%= link_to 'Show', pet, class:"btn btn-secondary text-light" %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet), class:"btn btn-secondary text-light" %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, class:"btn btn-secondary text-light", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-right">
<%= link_to 'New Pet', new_pet_path, class:"btn btn-secondary text-light"%>
</div>